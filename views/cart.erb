<h1>Your cart</h1>

<div class="bs-example" data-example-id="simple-table">
    <table class="table">
          <thead>
        <tr>

                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
                
                <td><%= item[0].title %></td>
                <td><%= item[0].price %></td>
                <td><%= item[1] %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
